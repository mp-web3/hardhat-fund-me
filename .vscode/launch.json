{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Hardhat Tests",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/.bin/hardhat",
            "args": ["test"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
